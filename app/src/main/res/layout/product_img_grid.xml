<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_card"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/linearPro"
            android:layout_height="160dp">
            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"/>
            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/welcome"
                        android:layout_marginRight="2dp"
                        android:scaleType="centerCrop"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_gridone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/welcome"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/image_girdtwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/unniss"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/fragment_title_padding_10"
            android:layout_marginRight="@dimen/fragment_title_padding_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/sans_bold"
                android:gravity="center"
                android:minLines="2"
                android:text="New product 1"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/brand"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sans"
                android:gravity="center"
                android:minLines="2"
                android:text="New product 1"
                android:textColor="@color/colorTex"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/product_rupee_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans"
                android:gravity="center"
                android:text="Rs.120.00"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:textColor="@color/colorTex"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>