<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_card"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/cricket" />

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top|start"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cricle_trans_back"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_round_arrow_back_24"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prevoius"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|start"
            android:layout_marginLeft="5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cricle_trans_back_full"
                android:padding="5dp"
                android:rotation="180"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_navigate_next_black_24dp"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cricle_trans_back_full"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_navigate_next_black_24dp"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp">


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_card"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:text="Sale Type"
                android:textColor="@color/gray"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:text="New product 1 (Combo Pack)"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:text="Price"
                android:textColor="@color/gray"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:text="Rs.1999.00"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:text="Descrpition"
                android:textColor="@color/gray"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/product_descrpition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sans"
                android:text="Good Product "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#f19331"
        android:fontFamily="@font/sans"
        android:text="Add to Cart"
        android:textColor="#fff"
        android:textSize="15dp"
        android:visibility="visible"
        app:icon="@drawable/ic_cart"
        app:iconTint="@color/white" />


</RelativeLayout>