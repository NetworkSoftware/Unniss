<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pro.network.spirtual">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="pro.network.spirtual.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/siddhasspritual"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/siddhasspritual"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="pro.network.spirtual.SplashActivity"
            android:theme="@style/AppThemeNowhite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pro.network.spirtual.HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.spirtual.ChangePassword"
            android:theme="@style/AppTheme" />

        <activity
            android:name="pro.network.spirtual.cart.CartActivity"
            android:label="Cart"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.spirtual.AllProductActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.spirtual.orders.MyOrderPage"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.spirtual.product.ProductActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.spirtual.product.BannerActivity"
            android:theme="@style/AppThemeImage" />
        <activity
            android:name="pro.network.spirtual.SettingsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.spirtual.ImageZoomActivity"
            android:theme="@style/AppThemeNowhite" />

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_7fnnn7WTaard4h" />


        <service
            android:name="pro.network.spirtual.app.FirebaseMessageReceiver"
            android:exported="false"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>